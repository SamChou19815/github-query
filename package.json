{
  "name": "@dev-sam/github-query",
  "version": "3.2.0",
  "bin": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --incremental --watch",
    "publish-to-npm": "yarn build && rm dist/tsconfig.tsbuildinfo && yarn npm publish --access public",
    "lint": "eslint . --ext .ts --ext .tsx",
    "format": "prettier --write '**/*.{ts,tsx}'",
    "format:check": "prettier --check '**/*.{ts,tsx}'"
  },
  "files": [
    "./dist"
  ],
  "dependencies": {
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.8.19",
    "chalk": "^4.0.0",
    "dotenv": "^8.2.0",
    "graphql-request": "^1.8.2"
  },
  "devDependencies": {
    "@dev-sam/eslint-config-common": "^0.10.0",
    "@types/blessed": "^0.1.17",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "@yarnpkg/pnpify": "^2.0.0-rc.20",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-import-resolver-node": "^0.3.3",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7",
    "prettier": "2.0.5",
    "typescript": "3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --write"
    ]
  }
}
