{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "es2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2015",
    "tsBuildInfoFile": "tsbuildinfo.node.json"
  },
  "include": ["src/"],
  "exclude": ["src/index.tsx", "src/frontend"]
}
